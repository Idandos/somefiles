#cloud-config
users:
  - default
  - name: stack
    lock_passwd: False
    sudo: ["ALL=(ALL) NOPASSWD:ALL\nDefaults:stack !requiretty"]
    shell: /bin/bash
write_files:
  - content: |
        #!/bin/sh
        wget -O /home/stack/vitrage_demo.sh https://raw.githubusercontent.com/Idandos/somefiles/master/vitrage_devstack/vitrage_demo.sh
        cd /home/stack
        ./vitrage_demo.sh
    path: /home/stack/start.sh
    permissions: 0755
runcmd:
  - su -l stack ./start.sh
